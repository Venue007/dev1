pipeline{
	agent any
	environment{
	    PATH="/opt/Maven/bin:$PATH"
	}
	stages{
		stage("Welcome"){
			steps{
				echo "Welcome to first Declarative pipeline"
			}
		}
		stage("GitCheckout"){
			steps{
				git 'https://github.com/Venue007/dev1.git'
			}
		}
		stage("Maven Build"){
			steps{
			    sh "cd /root/.jenkins/workspace/demo_pipeline/TCS"
			    sh "ls"
			}}
		stage("Maven Build1"){
			steps {	
			  sh '''
       				cd TCS/
   				mvn clean install
				mv target/*.jar target/myweb.jar
				pwd
    			'''
      		  } 
		}
		stage("Maven Deploy"){
			steps {	
			  sh '''
			  	pwd
       				scp target/myweb.jar root@192.168.40.140:/opt/tomcat8/webapps/
				ssh root@192.168.40.140 /opt/tomcat8/bin/shutdown.sh
				ssh root@192.168.40.140 /opt/tomcat8/bin/startup.sh
    			'''
        } 
		}
	}}

